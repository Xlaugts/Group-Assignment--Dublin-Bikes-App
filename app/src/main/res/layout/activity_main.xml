<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dublinbike_bcg1"
    tools:context="com.example.groupassignment.dublinbike.MainActivity">


    <Button
        android:id="@+id/menuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutButton"
        android:layout_alignStart="@+id/aboutButton"
        android:layout_below="@+id/aboutButton"
        android:layout_marginTop="28dp"
        android:background="#16a085"
        android:text="Main Map" />

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="27dp"
        android:layout_toLeftOf="@+id/addFavouriteTripButton"
        android:layout_toStartOf="@+id/addFavouriteTripButton"
        android:background="#16a085"
        android:text="List" />

    <Button
        android:id="@+id/addFavouriteTripButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp"
        android:background="#16a085"
        android:text="Add Favourtite Trip" />

    <Button
        android:id="@+id/showTrips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/menuButton"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="37dp"
        android:background="#16a085"
        android:text="Show Trips" />
</RelativeLayout>