<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hasna.dublinbike.DetailFvtClass">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Trip Detail"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

                <TextView
                    android:id="@+id/textViewTripName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:hint="Trip Name"
                    android:layout_margin="3dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

                <TextView
                    android:textSize="20sp"
                    android:layout_margin="3dp"
                    android:id="@+id/textViewStartName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Start Location Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

                <TextView
                    android:textSize="20sp"
                    android:layout_margin="3dp"
                    android:id="@+id/textViewEndName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="End Location Name"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

                <TextView
                    android:textSize="17sp"
                    android:layout_margin="3dp"
                    android:id="@+id/textViewTripDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Add Date (DD/MM/YYYY)" />

                <TextView
                    android:textSize="15sp"
                    android:layout_margin="3dp"
                    android:id="@+id/textViewComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Add Comments" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                        <Button
                            android:textSize="15sp"
                            android:id="@+id/btnUploadPhoto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Upload Pic"
                            android:layout_gravity="center"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageViewImage"
                            android:layout_width="300dp"
                            android:layout_height="200dp"
                            android:padding="10dp"/>
                </LinearLayout>


        </LinearLayout>

</RelativeLayout>